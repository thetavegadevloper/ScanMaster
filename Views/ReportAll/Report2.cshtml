@model IEnumerable<ScanMaster.Report>

@{
    ViewBag.Title = "Report2";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <div class="row">
       
    </div>
</div>
<br />
<br />
<div class="container">
    @using (Html.BeginForm("Report2", "ReportAll", FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-2 text-lg-left"><label>From Date</label></div>
            <div class="col-sm-3">
                <input type="date" id="datepicker" name="search" class="form-control" placeholder="Select Date" />
            </div>

            <div class="col-sm-2"><label>To Date</label></div>

            <div class="col-sm-3">
                <input type="date" id="datepicker1" name="search2" class="form-control" placeholder="Select Date" />
            </div>

            <div class="col-sm-2">
                <input type="submit" value="Search" class="btn btn-primary form-control" id="Sub"/>
            </div>

            <br /><br />
        </div>
        <div class="row">
            <div class="liste" style="height:450px; overflow:scroll">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:33%">
                            @Html.DisplayNameFor(model => model.ModelCode)
                        </th>
                        <th style="width:33%">
                            @Html.DisplayNameFor(model => model.PartName)
                        </th>
                        <th style="width:33%">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th style="width:33%">
                            @Html.DisplayNameFor(model => model.Activestatus)
                        </th>
                        @*<th></th>*@
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModelCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @{var isAttachmentA = (item.Activestatus.GetValueOrDefault() ? "OK" : "NotOk");}
                                @Html.DisplayFor(modelItem => isAttachmentA)
                            </td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    }
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
<script type="text/javascript">

  
    $(document).ready(function () {

        $("#Sub").click(function () {

            var dt = $("#datepicker").val();
            var dt2 = $("#datepicker1").val();
            var d = new Date(dt);
            var d2 = new Date(dt2);
          

            if (dt != "" && dt2 != "") {
                alert("Success");
            }
            else {
                alert("Date is not in given range." + dt);
            }

        });

    });
</script>

